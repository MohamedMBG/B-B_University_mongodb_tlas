<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <!-- HEADER SECTION -->
    <TextView
        android:id="@+id/tvHeaderDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        tools:text="Lundi, 2 Oct"
        android:textAllCaps="true"
        android:letterSpacing="0.05"
        android:textColor="#757575"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvClassTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="20dp"
        android:text="Emploi du temps"
        android:textColor="@android:color/black"
        android:textSize="28sp"
        android:fontFamily="sans-serif-black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tvHeaderDate"
        app:layout_constraintTop_toBottomOf="@id/tvHeaderDate" />

    <!-- LOADING STATE -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="#3F51B5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- EMPTY STATE GROUP -->
    <LinearLayout
        android:id="@+id/layoutEmptyState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvClassTitle">

        <!--
          Ideally, use an ImageView here with src="@drawable/ic_empty_calendar"
          For now, we just use text but structured for an image addition.
        -->
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="#E0E0E0"
            android:src="@android:drawable/ic_menu_my_calendar"
            app:tint="#BDBDBD"/>

        <TextView
            android:id="@+id/tvEmpty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Aucun cours aujourd'hui"
            android:textColor="#9E9E9E"
            android:textSize="16sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Actualiser"
            style="@style/Widget.MaterialComponents.Button.TextButton"/>
    </LinearLayout>

    <!-- MAIN LIST -->
    <!-- clipToPadding="false" allows content to scroll behind the bottom nav/edges
         while maintaining padding when at the top/bottom -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTimetable"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:clipToPadding="false"
        android:paddingBottom="80dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvClassTitle"
        tools:listitem="@layout/item_timetable_entry2" />

</androidx.constraintlayout.widget.ConstraintLayout>